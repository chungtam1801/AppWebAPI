@using AppData.Models;
@model AppData.Models.ChiTietBienThe

@{
    Layout = "~/Views/Shared/_LayoutforAdmin.cshtml";
    ViewData["Title"] = "Create";
    List<GiaTri> giaTris = ViewBag.GiaTri;
    List<BienThe> bienThes = ViewBag.BienThe;
    List<SanPham> sanPhams = ViewBag.SanPham;
  
}

<h1>Create</h1>

<h4>ChiTietBienThe</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            
            <div class="form-group">
                <lable>Tên Giá trị</lable>
                <div>
                    <select class="form-control" name="IDGiaTri">
                        
                        @foreach (var item in giaTris)
                        {
                            <option value="@item.ID">@item.Ten</option>
                        }
                    </select>
                </div>
                <button asp-area="Admin" asp-controller="ChiTietBienThe" style="color:red" asp-action="CreateGiaTri">Thêm nhanh Giá Trị</button>
                
            </div>
            <div class="form-group">
                <br />
            </div>
            <div class="form-group">
                <lable>Tên Biến Thể</lable>
                <div>
                    <select class="form-control" name="IDBienThe">
                        @foreach (var item in bienThes)
                        {
                            <option value="@item.ID">@sanPhams.FirstOrDefault(p=>p.ID ==item.IDSanPham).Ten</option>
                        }
                    </select>
                </div>
                <button asp-area="Admin" asp-controller="ChiTietBienThe" style="color:red " asp-action="CreateBienThe">Thêm nhanh Biến Thể</button>
            </div>
            <div class="form-group">
                <br />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

